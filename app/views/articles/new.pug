extends ../layout/layout.pug

block content
  h1 New Article
  form(action="/articles" method="post")
    #article
      article.article
        .article-title
          input(type="hidden" name="_csrf" value=csrf)
          input(type="text" name="title" class="form-control" placeholder="Article Title" required autofocus)
        .article-description
          textarea(class="textarea form-control" name="description" placeholder="Article Description" required autofocus)
        .article-content
          textarea(name="content" placeholder="Article Content" class="form-control" id="article-editor")
        button(class="btn btn-info btn-block" type="submit") Save
block dynamicJs
  script(src=helpers.assetUrl('editor.js'))
block dynamicCss
  link(rel='stylesheet' href=helpers.assetUrl('editor.css'))
